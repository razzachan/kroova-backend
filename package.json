{
  "name": "krouva-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "validate:phase1": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/test-auth-wallet.ps1",
    "dev:deposit": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/dev-deposit.ps1",
    "validate:boosters": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/test-boosters.ps1",
    "validate:market": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/test-marketplace.ps1",
    "validate:internal": "tsx scripts/validate-internal.ts",
    "db:push": "supabase db push",
    "db:studio": "supabase studio",
    "db:reset": "supabase db reset --confirm",
    "db:seed": "supabase db execute --file supabase/seed/seed_basic.sql",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "security:audit": "npm audit --audit-level=moderate",
    "simulate": "tsx tests/simulation/cli.ts",
    "simulate:quick": "tsx tests/simulation/cli.ts -- --boosters 500 --iterations 5",
    "simulate:deep": "tsx tests/simulation/cli.ts -- --boosters 5000 --iterations 20 --detailed",
    "simulate:compare": "tsx tests/simulation/cli.ts -- --compare",
    "simulate:csv": "tsx tests/simulation/cli.ts -- --csv",
    "simulate:dashboard": "tsx tests/simulation/dashboard.ts",
    "simulate:validate": "tsx tests/simulation/validate-correlation.ts",
    "simulate:visual": "tsx tests/simulation/visual.ts",
    "cards:generate": "node scripts/generate_cards.js",
    "cards:export": "node scripts/export_cards.js",
    "cards:seed": "node scripts/seed_supabase.js",
    "cards:figma": "node scripts/export_figma.js",
    "cards:verify": "node scripts/cards_verify.js",
    "nft:worker": "tsx src/modules/nft/nft.queue.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^7.2.4",
    "@supabase/supabase-js": "^2.42.3",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.64.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "fastify": "^4.25.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "strip-ansi": "^7.1.0",
    "stripe": "^14.25.0",
    "winston": "^3.18.3",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.1",
    "@vitest/ui": "^1.6.1",
    "c8": "^10.1.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4",
    "tsx": "^4.7.2",
    "typescript": "^5.4.2",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
